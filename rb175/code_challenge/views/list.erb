<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>File List</title>
</head>

<body>
  <ul>
    <% @files.each do |file| %>
      <li><a href="#"><%= file %></a></li>
    <% end %>
  </ul>

  <p>
    <% if params[:sort] == "desc" %>
      <a href="/">Sort ascending</a>
    <% else %>
      <a href="/?sort=desc">Sort descending</a>
    <% end %>
  </p>
</body>
</html>